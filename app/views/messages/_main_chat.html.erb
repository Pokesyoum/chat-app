<div class="chat-top">
  <div class="chat-room">
    <%= @room.name %>
  </div>
  <div class="end-chat-btn">
    <%= link_to "チャットを終了する", room_path(@room), data: { turbo_method: :delete } %>
  </div>
</div>
<div class="chat-main">
  <div class="messages">
    <%= render partial: "message", collection: @messages %>
  </div>
</div>
<%= form_with model: [@room, @message], html: {class: "chat-bottom"}, local: true do |f|%>
  <div class="message-form">
    <%= f.text_field :content, class: "message-input", placeholder: "type a message" %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: "hidden" %>
    </label>
  </div>
  <%= f.submit "送信", class: "send-btn" %>
<% end %>